{
  "name": "esg-policy-gen",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:server": "npm --workspace server run dev",
    "dev:web": "npm --workspace web run dev",
    "lint": "npm-run-all -p lint:*",
    "lint:server": "npm --workspace server run lint",
    "lint:web": "npm --workspace web run lint",
    "format": "npm-run-all -p format:*",
    "format:server": "npm --workspace server run format",
    "format:web": "npm --workspace web run format"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@sparticuz/chromium": "^138.0.2",
    "docx": "^9.5.1",
    "lucide-react": "^0.540.0",
    "mongoose": "^8.18.0",
    "puppeteer-core": "^24.17.0"
  }
}
